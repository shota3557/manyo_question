<%= form_with(model: @task, local: true, url: choose_new_or_edit) do |form| %>
  <% if @task.errors.any? %>
    <div id = "erroe_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります</h2>
      <ul>

      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>  
      </ul>
    </div> 
  <% end %>   

  <div class = "task_name">
    <%= form.label :タイトル %>
    <%= form.text_field :name %>
  </div>  

  <div class = "task_content">
    <%= form.label :投稿内容 %>
    <%= form.text_area :content  %>
  </div>

  <div class = "task_limit">
    <%= form.label :終了期限 %>
    <%= form.date_field :end_date  %>
  </div>

  <div class = "task_status">
    <%= form.label :進捗状況 %>
    <%= form.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完成", "完成"]], include_blank: "選択してください" %>
  </div>
  
  <div class = "task_priority">
    <%= form.label :優先度 %>
    <%= form.select :priority, [["低い", "低い"], ["中", "中"], ["高い", "高い"]], include_blank: "選択してください" %>
  </div>

  <div class="field">
    <%= form.label :ラベル名 %>
    <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
  </div>

  <%= form.submit "投稿する" %>
<% end %>